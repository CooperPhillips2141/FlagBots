# CSM Bahar Flagbot Project - Ultrasonic Sensors Test Code
# Author: Emily Perry

import RPi.GPIO as GPIO
import time

class DistanceSensorGroup:

    # trigger_pins and echo_pins are lists of the trigger and echo pins for each ultrasonic sensor
    def __init__(self, trigger_pins, echo_pins, distance_tolerance) -> None:
        # or GPIO.BOARD
        GPIO.setmode(GPIO.BCM)
        
        # this is in cm
        self._distance_tolerance = distance_tolerance

        # create all the distance sensors and put them in a list
        self._sensors = []
        for i in range(len(trigger_pins)):
            self._sensors.append(DistanceSensor(trigger_pins[i], echo_pins[i]))

    # returns true if there's an object within the tolerance from any distance sensor
    def isObjectTooClose(self) -> bool:
        for sensor in self._sensors:
            if(sensor.getDistance() < self._distance_tolerance):
                return True
        return False



class DistanceSensor:
    def __init__(self, trigger_pin, echo_pin) -> None:
        self._trigger_pin = trigger_pin
        self._echo_pin = echo_pin

        #setup pins
        GPIO.setup(self._trigger_pin, GPIO.OUT)
        GPIO.setup(self._echo_pin, GPIO.IN)

    def getDistance(self):
        # set Trigger to HIGH
        GPIO.output(self._trigger_pin, True)

        # set Trigger after 0.01ms to LOW
        time.sleep(0.00001)
        GPIO.output(self._trigger_pin, False)

        #don't know why these are in here....
        StartTime = time.time()
        StopTime = time.time()
    
        # save StartTime
        while GPIO.input(self._echo_pin) == 0:
            StartTime = time.time()
    
        # save time of arrival
        while GPIO.input(self._echo_pin) == 1:
            StopTime = time.time()

        # time difference between start and arrival
        TimeElapsed = StopTime - StartTime

        # multiply with the sonic speed (34300 cm/s)
        # and divide by 2, because there and back
        distance = (TimeElapsed * 34300) / 2

        return distance